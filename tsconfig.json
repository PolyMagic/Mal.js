{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "declarationDir": "./typings/"
  },
  "include": ["./src"]
}
