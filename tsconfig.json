{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2019"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "declarationDir": "./typings/"
  },
  "include": ["./src"]
}
